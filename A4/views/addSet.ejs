<!DOCTYPE html>
<html lang="en" data-theme="pastel" class="bg-gray-200">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Add Set - Lego Collection</title>
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/addSet' }) %>
    
    <div class="container mx-auto flex items-center justify-center flex-col relative top-6 max-w-fit bg-zinc-100 shadow-xl rounded-lg p-5">
        <h1 class="text-4xl font-bold mb-4">Add Set</h1>
        
        <!-- Form for adding sets -->
        <form action="/lego/addSet" method="POST">
          <div class="mb-4">
            <label for="name" class="block text-gray-700">Name:</label>
            <input type="text" id="name" name="name" required class="form-input mt-1 block w-full">
          </div>
          <div class="mb-4">
            <label for="year" class="block text-gray-700">Year:</label>
            <input type="number" id="year" name="year" required class="form-input mt-1 block w-full">
          </div>
          <div class="mb-4">
            <label for="num_parts" class="block text-gray-700">Number of Parts:</label>
            <input type="number" id="num_parts" name="num_parts" required class="form-input mt-1 block w-full">
          </div>
          <div class="mb-4">
            <label for="img_url" class="block text-gray-700">Image URL:</label>
            <input type="url" id="img_url" name="img_url" required class="form-input mt-1 block w-full">
          </div>
          <div class="mb-4">
            <label for="theme_id" class="block text-gray-700">Theme:</label>
            <select id="theme_id" name="theme_id" required class="form-select mt-1 block w-full">
              <% themes.forEach(theme => { %>
                <option value="<%= theme.id %>"><%= theme.name %></option>
              <% }); %>
            </select>
          </div>
          <div class="mb-4">
            <label for="set_num" class="block text-gray-700">Set Number:</label>
            <input type="text" id="set_num" name="set_num" required class="form-input mt-1 block w-full">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        
    </div>
</body>
</html>
